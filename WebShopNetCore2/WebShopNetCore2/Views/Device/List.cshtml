<div id="deviceDiv">

</div>

@section scripts{
    <script>

        $(document).ready(function () {
            LoadMoreDevices();
        });

        $(window).scroll(function () {
            if ($(window).scrollTop() == $(document).height() - $(window).height()) {
                LoadMoreDevices();
            }
        });

        function LoadMoreDevices() {

            $.ajax({
                type: 'GET',
                url: '/api/DeviceData',
                dataType: 'json',
                success: function (jsonData) {
                    if (jsonData == null) {
                        alert('no data returned');
                        return;
                    }

                    $.each(jsonData, function (index, device) {

                        var PieSummarString = '<div class="col-sm-4 col-lg-4 col-md-4 container body-content"> ' +
                                              '  <div class="thumbnail">' +
                                              '     <img src="' + device.imageThumbnailUrl + '"style="max-height:212px" alt="">' +
                                              '      <div class="caption">' +
                                              '         <h3 class="pull-right">' + device.price + '</h3>' +
                                              '         <h3>' +
                                              '             <a href=/Device/Details/' + device.pieId + '>' + device.name + '</a>' +
                                              '         </h3>' +
                                              '         <p>' + device.shortDescription + '</p>' +
                                              '    </div>' +
                                              '    <div class="addToCart">' +
                                              '        <p class="button">' +
                                              '             <a class="btn btn-primary" href=/ShoppingCart/AddToShoppingCart?deviceId=' + device.pieId + '>Add to cart</a>' +
                                              '         </p>' +
                                              '     </div>' +
                                              '  </div>' +
                                              '</div>';

                        $('#deviceDiv').append(PieSummarString);
                    });
                },
                error: function (ex) {
                    alert(ex);
                }
            });
            return false;
        }
    </script>

}
