@model Device

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img style="max-height:212px" src="@Model.ImageThumbnailUrl" alt="" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Device" asp-action="Details"  asp-route-deviceId="@Model.DeviceId">
                @Model.Name
                </a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart text-right">
            <p class="button">
                <a class="btn btn-success" id="cartButton"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-deviceId="@Model.DeviceId">
                    Add to cart
                </a>
            </p>
        </div>
    </div>

</div>
